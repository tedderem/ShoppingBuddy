<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/mealName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/mealDifficulty"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/mealName"
        android:layout_alignLeft="@+id/mealName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/mealServes"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/mealDifficulty"
        android:layout_toRightOf="@+id/mealDifficulty"
        android:layout_toEndOf="@+id/mealDifficulty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/mealCuisine"
        android:layout_below="@+id/mealDifficulty"
        android:layout_alignLeft="@+id/mealDifficulty"
        android:layout_alignStart="@+id/mealDifficulty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/mealCreatedBy"
        android:layout_below="@+id/mealCuisine"
        android:layout_alignLeft="@+id/mealCuisine"
        android:layout_alignStart="@+id/mealCuisine" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/mealDirections"
        android:layout_below="@+id/mealCreatedBy"
        android:layout_alignLeft="@+id/mealCreatedBy"
        android:layout_alignStart="@+id/mealCreatedBy" />

</RelativeLayout>